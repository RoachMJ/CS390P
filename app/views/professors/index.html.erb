<p id="notice"><%= notice %></p>

<h1>Professors</h1>
<%= form_tag(professors_path, method: "get") do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag :q, params[:q], required: true %>
    <%= submit_tag 'Search', name: nil %>
<% end %>

<% if @professors.blank? %>
    <h4>No results found for "<%= params[:q] %>".Ensure that you are searching for a professor!</h4>
<% end %>

<table>
  <thead>
    <tr>
      <th>Professors names</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.professors_names %></td>
        <td><%= link_to 'Show', professor %></td>
        <td><%= link_to 'Edit', edit_professor_path(professor) %></td>
        <td><%= link_to 'Destroy', professor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Professor', new_professor_path %>
